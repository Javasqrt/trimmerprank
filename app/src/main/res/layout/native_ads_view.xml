<?xml version="1.0" encoding="utf-8"?>
<com.google.android.gms.ads.formats.UnifiedNativeAdView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:ads="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:background="@drawable/native_bg"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/ad_label" />

        <Button
            android:id="@+id/native_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="15dp"
            android:background="@drawable/path_107"
            android:gravity="center"
            android:text="BUTTON"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/native_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:layout_marginBottom="75dp"
            android:gravity="center"
            android:text="EXAMPLE TEXT FOR ADS NATIVE"
            android:textColor="#000000" />

        <com.google.android.gms.ads.formats.MediaView
            android:id="@+id/native_media"
            android:layout_width="250dp"
            android:layout_height="95dp"
            android:layout_gravity="center|top"
            android:layout_marginTop="25dp" />

    </FrameLayout>

</com.google.android.gms.ads.formats.UnifiedNativeAdView>